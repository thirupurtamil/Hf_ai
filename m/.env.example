# Environment Configuration for Mobile AI Django
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (SQLite is default, uncomment for PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/mobile_ai_django

# Redis Configuration (for Celery and Channels)
REDIS_URL=redis://localhost:6379/0

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Email Configuration (for reports and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Auto Fine-tuning Settings
AUTO_FINETUNE_THRESHOLD=0.7
MIN_TRAINING_SAMPLES=100
MAX_TRAINING_SAMPLES=1000

# DuckDuckGo Search Settings
DUCKDUCKGO_REGION=wt-wt
DUCKDUCKGO_SAFESEARCH=moderate

# Logging Level
LOG_LEVEL=INFO
